= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation.alert.alert-error
      = "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title, class: 'input-xxlarge'
  .field
    = f.label :description
    = f.text_area :description, rows: "6", class: 'input-xxlarge'
  .field
    = f.label :image_url
    = f.text_field :image_url, class: 'input-xxlarge'
  .field
    = f.label :price
    = f.text_field :price, class: 'input-xxlarge'
  .actions
    = f.submit 'Save', class: 'btn'
